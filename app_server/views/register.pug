extends layout

block content
  .row.mt-5
    .col-md-6.offset-md-3
      .card.shadow
        .card-body
          h2.card-title.text-center.mb-4 Create Account
          form(role='form', action="/register", method="post")
            .mb-3
              label.form-label(for="username") Username
              input#username.form-control(type='text', name="username", placeholder='Enter Username', required)
            .mb-3
              label.form-label(for="password") Password
              input#password.form-control(type='password', name="password", placeholder='Enter Password', required)
            .d-grid.gap-2
              button.btn.btn-primary.btn-lg(type='submit') Create Account
              a.btn.btn-outline-primary.btn-lg(href='/') Cancel